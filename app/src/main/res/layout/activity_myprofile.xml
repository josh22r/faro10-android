<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways">

            <ImageView
                android:id="@+id/imgRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end|right"
                android:contentDescription="@null"
                android:padding="10dp"
                android:src="@drawable/ic_refresh_24dp"
                android:visibility="gone" />

            <include layout="@layout/topbar" />
        </FrameLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llMyProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryDark"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.common.view.CTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic__left_white_24dp"
                    android:visibility="invisible" />

                <com.common.view.CBTextView
                    style="@style/txt_fff_18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Profile"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imgErrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_arrow_up_white" />

                <ImageView
                    android:id="@+id/imgErrowDow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:src="@drawable/ic_arrow_down_white"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <com.common.view.CTextView
                            android:id="@+id/tvUserName"
                            style="@style/txt_green_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_user_primary_dark_24dp"
                            android:drawablePadding="15dp"
                            android:gravity="center|start"
                            android:hint="User Name" />

                        <com.common.view.CTextView
                            android:id="@+id/tvEditProf"
                            style="@style/txt_666_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="7dp"
                            android:background="@color/gray_light" />

                        <LinearLayout
                            android:layout_width="0px"
                            android:layout_height="0px"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextAppearence.App.TextInputLayout_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:hintAnimationEnabled="true"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout_">

                            <com.common.view.CEditTextView
                                android:id="@+id/editGender"
                                style="@style/txt_333_16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edittext_bg"
                                android:clickable="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="Gender"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textCursorDrawable="@null" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextAppearence.App.TextInputLayout_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:hintAnimationEnabled="true"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout_">

                            <com.common.view.CEditTextView
                                android:id="@+id/editRace"
                                style="@style/txt_333_16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edittext_bg"
                                android:clickable="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="Race"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textCursorDrawable="@null" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextAppearence.App.TextInputLayout_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            app:hintAnimationEnabled="true"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout_">

                            <com.common.view.CEditTextView
                                android:id="@+id/editWeight"
                                style="@style/txt_333_16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edittext_bg"
                                android:hint="Wieght"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textCursorDrawable="@null" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextAppearence.App.TextInputLayout_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:hintAnimationEnabled="true"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout_">

                            <com.common.view.CEditTextView
                                android:id="@+id/editNationality"
                                style="@style/txt_333_16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edittext_bg"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                android:hint="Nationality"
                                android:inputType="text"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textCursorDrawable="@null" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextAppearence.App.TextInputLayout_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:hintAnimationEnabled="true"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout_">

                            <com.common.view.CEditTextView
                                android:id="@+id/editCountry"
                                style="@style/txt_333_16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edittext_bg"
                                android:clickable="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="Country"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textCursorDrawable="@null" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextAppearence.App.TextInputLayout_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:hintAnimationEnabled="true"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout_">

                            <com.common.view.CEditTextView
                                android:id="@+id/editDiagnosis"
                                style="@style/txt_333_16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edittext_bg"
                                android:clickable="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="Diagnosis"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textCursorDrawable="@null" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextAppearence.App.TextInputLayout_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:hintAnimationEnabled="true"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout_">

                            <com.common.view.CEditTextView
                                android:id="@+id/editBirthDate"
                                style="@style/txt_333_16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edittext_bg"
                                android:clickable="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="Birth Date"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textCursorDrawable="@null" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextAppearence.App.TextInputLayout_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:hintAnimationEnabled="true"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout_">

                            <com.common.view.CEditTextView
                                android:id="@+id/editZipCode"
                                style="@style/txt_333_16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edittext_bg"
                                android:hint="ZIP Code"
                                android:inputType="number"
                                android:maxLength="6"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textCursorDrawable="@null" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            style="@style/TextAppearence.App.TextInputLayout_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:hintAnimationEnabled="true"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout_">

                            <com.common.view.CEditTextView
                                android:id="@+id/editTimeZone"
                                style="@style/txt_333_16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edittext_bg"
                                android:longClickable="false"
                                android:focusable="false"

                                android:hint="TimeZone"
                                android:inputType="number"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textCursorDrawable="@null" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextAppearence.App.TextInputLayout_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:hintAnimationEnabled="true"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout_">

                            <CheckBox
                                android:id="@+id/cbPaidTrials"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Interested in being contacted about participation in paid trials" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/llAcomplish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryDark"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.common.view.CTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic__left_white_24dp"
                    android:visibility="invisible" />

                <com.common.view.CBTextView
                    style="@style/txt_fff_18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Accomplishments"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imgErrowAccom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_arrow_up_white" />

                <ImageView
                    android:id="@+id/imgErrowDowAccom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:src="@drawable/ic_arrow_down_white"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAcomplishDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Goals"
                        android:textColor="@color/primaryDark"
                        android:textSize="16dp" />

                    <TextView
                        style="@style/txt_000_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="15dp"
                        android:text="Entries"
                        android:textColor="@color/primaryDark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgEntries"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/trophy_icon_xxdpi" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:id="@+id/pbEntries"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="20dp"
                                android:progressDrawable="@drawable/rectangle_progressbar" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.common.view.CBTextView
                                    android:id="@+id/tvEntriesPer"
                                    style="@style/txt_000_18"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="15dp"
                                    android:gravity="right"
                                    android:hint="50%/1000" />
                            </RelativeLayout>

                        </FrameLayout>

                    </LinearLayout>

                    <TextView
                        style="@style/txt_000_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="20dp"
                        android:text="Exercise"
                        android:textColor="@color/primaryDark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgExercise"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/trophy_icon_xxdpi" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:id="@+id/pbExercise"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="20dp"
                                android:progressDrawable="@drawable/rectangle_progressbar" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.common.view.CBTextView
                                    android:id="@+id/tvExercisePer"
                                    style="@style/txt_000_18"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="15dp"
                                    android:gravity="right"
                                    android:hint="50%/1000" />
                            </RelativeLayout>

                        </FrameLayout>

                    </LinearLayout>

                    <TextView
                        style="@style/txt_000_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="20dp"
                        android:text="Medication"
                        android:textColor="@color/primaryDark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgMedication"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/trophy_icon_xxdpi" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:id="@+id/pbMedication"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="20dp"
                                android:progressDrawable="@drawable/rectangle_progressbar" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.common.view.CBTextView
                                    android:id="@+id/tvMadicationPer"
                                    style="@style/txt_000_18"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="15dp"
                                    android:gravity="right"
                                    android:hint="50%/1000" />
                            </RelativeLayout>

                        </FrameLayout>

                    </LinearLayout>

                    <TextView
                        style="@style/txt_000_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="20dp"
                        android:text="Sponsored"
                        android:textColor="@color/primaryDark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgSponsored"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/trophy_icon_xxdpi" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:id="@+id/pbSponsored"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="20dp"
                                android:progressDrawable="@drawable/rectangle_progressbar" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.common.view.CBTextView
                                    android:id="@+id/tvSponsorPer"
                                    style="@style/txt_000_18"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="15dp"
                                    android:gravity="right"
                                    android:hint="50%/1000" />
                            </RelativeLayout>

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="85dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="20dp"
                                android:background="@color/theme_gray" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="20dp"
                                android:background="@color/theme_gray" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="20dp"
                                android:background="@color/theme_gray" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="10dp"
                                android:background="@color/theme_gray" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="85dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/theme_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="85dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <com.common.view.CTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Newbie"
                                android:textColor="@color/theme_red" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <com.common.view.CTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Decent"
                                android:textColor="@color/theme_orange" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <com.common.view.CTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Good"
                                android:textColor="@color/theme_green" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <com.common.view.CTextView
