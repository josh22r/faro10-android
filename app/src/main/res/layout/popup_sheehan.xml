<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <com.common.view.CBTextView
        style="@style/txt_theme_dark_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sheehan" />

    <com.common.view.CTextView
        style="@style/txt_333_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="The Sheehan Disability Scale was designed to evaluate the impact of psychiatric symptoms in tree areas

Work Life/School Life
Social Life
Family Life

" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:orientation="horizontal">

        <com.common.view.CTextView
            style="@style/txt_accent_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="CLOSE" />

    </LinearLayout>

</LinearLayout>